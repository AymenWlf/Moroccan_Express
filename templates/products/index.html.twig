{% extends 'base.html.twig' %} {% block title %}Nos Produits - MoroccanExpress{% endblock %} {% block content %}
<style>
    .product-item {
        border: 1px solid rgb(52, 52, 52, 0.5);
        margin-top: 50px;
    }
    
    .product-subtitle {
        font-size: 13px;
    }
    
    .product-container {
        margin-bottom: 20px;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{form(form)}}
    </div>

    <div class="col-md-9">
        <h3>Nos Produits</h3>
        <hr>

        <div class="row product-container">
            {% for product in products %}
            <div class="col-md-4">
                <div class="product-item text-center ">
                    <img src="/uploads/{{product.illustration}}" class="card-img-top" alt="{{product.name}}">
                    <div class="card-body">
                        <h5>{{product.name}}</h5>
                        <span class="product-subtitle">{{product.subtitle}}</span>
                        <p>{{(product.price / 100)|number_format(2,',','.') }} Dhs</p>
                        <a href="{{path('product',{'slug':product.slug})}} " class="btn  btn-outline-dark">En savoir plus</a>
                    </div>
                </div>
            </div>

            {% endfor %}

        </div>
    </div>


</div>

</div>
<hr> {% endblock content %}