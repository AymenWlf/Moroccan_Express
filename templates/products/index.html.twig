{% extends 'base.html.twig' %} {% block title %}Nos Produits - MoroccanExpress{% endblock %} {% block content %}
<style>
    .product-item {
        margin-top: 50px;
    }
    
    .product-subtitle {
        font-size: 13px;
    }
    
    .product-container {
        margin-bottom: 20px;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{form(form)}}
    </div>

    <div class="col-md-9">
        <h3>Nos Produits</h3>
        <hr>

        <div class="row product-container">
            {% for product in products %}
            <div class="col-md-4">
                <a href="{{path('product',{'slug':product.slug})}} " class=" card-link" style="color: rgb(50, 50, 50);">
                    <div class="product-item text-center ">
                        <img src="/uploads/{{product.illustration}}" class="card-img-top" alt="{{product.name}}">
                        <div class="card-body">
                            <h5>{{product.name}}</h5>
                            <span class="product-subtitle">{{product.subtitle}}</span>
                            <p>{{(product.price / 100)|number_format(2,',','.') }} Dhs</p>

                        </div>
                    </div>
                </a>
            </div>

            {% endfor %}

        </div>
    </div>


</div>

</div>
<hr> {% endblock content %}